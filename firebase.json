      "nodeVersion": "22", // Specify your Node.js version, matches what the build logs used
      "environmentVariables": {
        "google_api_key": "AIzaSyANC2F_FhjAi7k0lKH4aflBCPPRxhJIdj8" // <-- Your actual key here!
      }
    }
    // If you had other app hosting backends (like "studio"), they would go here too:
